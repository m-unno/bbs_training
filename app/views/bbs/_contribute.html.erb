<%= form_for @new_thread, :url => bbs_path, :html => {:multipart => true} do |f| %>

<table id="new_thread_form">
  <tr>
    <td><%= f.label :name, 'おなまえ' %></td>
    <td><%= f.text_field :name %></td>
  </tr>

  <tr>
    <td><%= f.label :email, 'E-mail' %></td>
    <td><%= f.text_field :email %></td>
  </tr>
  
  <tr>
    <td><%= f.label :title, '題名' %></td>
    <td><%= f.text_field :title %><%= f.submit '送信する', :disable_with => '送信中...'%></td>
  </tr>

  <tr>
    <td><%= f.label :comment, 'コメント' %></td>
    <td><%= f.text_area :comment, {:cols => 50, :rows => 5} %></td>
  </tr>
  
  <tr>
    <td><%= f.label :image_file, '添付ファイル' %></td>
    <td><%= f.file_field :image_file %></td>
  </tr>
  
  <tr>
    <td><%= f.label :delkey, '削除キー' %></td>
    <td><%= f.text_field :delkey, {:size => 8, :maxlength => 8} %>（削除用、英数字で8文字以内）</td>
  </tr>
</table>

<% end %>
